{
  "manifest_version": 2,

  "name": "Soncoso Toggl Import",
  "description": "Import entries from toggl to soncoso daily time record.",
  "version": "1.1.0",
  "icons": {
    "16": "images/icon_16.png",
    "24": "images/icon_24.png",
    "32": "images/icon_32.png",
    "128": "images/icon_128.png"
   },

  "browser_action": {
    "default_icon": {
      "16": "images/icon_16.png",
      "24": "images/icon_24.png",
      "32": "images/icon_32.png"
    },
    "default_title": "Soncoso Toggl Import",
    "default_popup": "popup.html"
  },

  "permissions": [
    "http://*/*",
    "https://*/*",
    "storage"
  ],

  "content_scripts": [{
    "matches" : [ "https://portal.lmis.de/*" ],
    "js" : ["jquery-3.1.1.min.js", "toggl.js", "project_import.js"],
    "all_frames": false
  },{
    "matches" : [ "https://portal.lmis.de/Popup/DetailsDialog.aspx*" ],
    "js" : ["jquery-3.1.1.min.js", "toggl.js", "ui.js", "project_details.js"],
    "all_frames": true
  },{
    "matches" : [ "https://portal.lmis.de/Workflow/CreateMultipleTimeRecordForDay/*" ],
    "js" : ["jquery-3.1.1.min.js", "toggl.js", "ui.js", "main.js"],
    "all_frames": true
  }]
}
